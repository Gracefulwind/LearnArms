    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:showDividers="middle"
        >
        <Button
            android:id="@+id/bt_zhihu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/public_background"
            tools:text="@string/public_name_zhihu"
            android:textColor="@color/public_color_959292"
            android:textSize="@dimen/public_font_24sp"
            />

        <Button
            android:id="@+id/bt_gank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/public_background"
            tools:text="@string/public_name_gank"
            android:textColor="@color/public_color_959292"
            android:textSize="@dimen/public_font_24sp"
            />

        <Button
            android:id="@+id/bt_gold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/public_background"
            tools:text="@string/public_name_gold"
            android:textColor="@color/public_color_959292"
            android:textSize="@dimen/public_font_24sp"
            />
    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flexbox_layout"
        app:flexWrap="wrap"
        app:alignItems="center"
        app:alignContent="flex_start"
        app:flexDirection="row"
        app:justifyContent="flex_start"
        app:showDivider="beginning|middle"
        >

        <TextView
            android:id="@+id/am_tv_click1"
            android:text="功能1-转跳模块1"
            style="@style/style_common_text_button"
            />

        <TextView
            android:id="@+id/am_tv_weather_report"
            android:text="天气预报"
            style="@style/style_common_text_button"
            />
        <TextView
            android:id="@+id/am_tv_see_novels"
            android:text="看小说"
            style="@style/style_common_text_button"
            />
        <TextView
            android:id="@+id/am_tv_smart_write"
            android:text="智能手写"
            style="@style/style_common_text_button"
            />

        <TextView
            app:layout_flexGrow="1"
            android:text="漫画.手绘"
            style="@style/style_common_text_button"
            />
        <TextView
            android:text="广告圈"
            style="@style/style_common_text_button"
            />
        <TextView
            android:text="旅行.在路上"
            style="@style/style_common_text_button"
            />
        <TextView
            android:text="影视天堂"
            style="@style/style_common_text_button"
            />
        <TextView
            android:text="短篇小说"
            style="@style/style_common_text_button"
            />
        <TextView
            android:text="美食"
            style="@style/style_common_text_button"
            />
        <TextView
            android:text="青春"
            style="@style/style_common_text_button"
            />
        <TextView
            android:text="散文"
            app:layout_order="3"
            style="@style/style_common_text_button"
            />
        <TextView
            android:text="摄影"
            app:layout_order="2"
            style="@style/style_common_text_button"
            />
        <TextView
            android:id="@+id/am_tv_copy"
            android:text="Copy组件"
            style="@style/style_common_text_button"
            />
    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>