<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/ratg_btn_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test0"
            />
        <Button
            android:id="@+id/ratg_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换text"
            />
        <Button
            android:id="@+id/ratg_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fun2"
            />

    </LinearLayout>

    <com.gracefulwind.learnarms.reader.widget.TestFrameLayout
        android:id="@+id/ratg_fl_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F00"
        >
        <com.gracefulwind.learnarms.reader.widget.edit.SmartTextView

            android:id="@+id/ratg_et_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#0f0"
            />
    </com.gracefulwind.learnarms.reader.widget.TestFrameLayout>



</LinearLayout>