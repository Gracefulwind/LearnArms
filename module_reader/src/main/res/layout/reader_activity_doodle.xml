<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/rad_tv_click0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换模式"
            />
        <Button
            android:id="@+id/rad_tv_click1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="撤销"
            />
        <Button
            android:id="@+id/rad_tv_click2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反撤销"
            />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0F0"
            />
        <com.gracefulwind.learnarms.reader.widget.doodle.DoodleView
            android:id="@+id/rad_dv_container"
            android:layout_width="@dimen/public_dimen_0dp"
            android:layout_height="@dimen/public_dimen_0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


    </android.support.constraint.ConstraintLayout>

</LinearLayout>