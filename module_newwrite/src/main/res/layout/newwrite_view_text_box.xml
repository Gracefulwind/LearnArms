<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    android:layout_width="@dimen/public_dimen_0dp"-->
    <EditText
        android:id="@+id/vtb_et_edit"
        android:layout_width="@dimen/public_dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/public_dimen_6dp"
        android:background="@drawable/newwrite_shape_frame_light"
        />

    <androidx.legacy.widget.Space
        android:id="@+id/vtb_space"
        android:layout_width="@dimen/public_dimen_10dp"
        android:layout_height="@dimen/public_dimen_10dp"
        app:layout_constraintBottom_toBottomOf="@id/vtb_et_edit"
        app:layout_constraintLeft_toLeftOf="@id/vtb_et_edit"
        android:layout_marginBottom="@dimen/public_dimen_6dp"
        />

    <ImageView
        android:id="@+id/vtb_iv_button_move"
        android:layout_width="@dimen/public_dimen_12dp"
        android:layout_height="@dimen/public_dimen_12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vtb_space"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_text_box_move"
        />

    <ImageView
        android:id="@+id/vtb_iv_button_delete"
        android:layout_width="@dimen/public_dimen_12dp"
        android:layout_height="@dimen/public_dimen_12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_text_box_delete"
        />

    <ImageView
        android:id="@+id/vtb_iv_button_resize"
        android:layout_width="@dimen/public_dimen_12dp"
        android:layout_height="@dimen/public_dimen_12dp"
        app:layout_constraintTop_toBottomOf="@id/vtb_space"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_text_box_resize"
        />


</androidx.constraintlayout.widget.ConstraintLayout>