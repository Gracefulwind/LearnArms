<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/washn_btn_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="键盘"
            />
        <Button
            android:id="@+id/washn_btn_doodle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="涂鸦"
            />
        <Button
            android:id="@+id/washn_btn_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="橡皮擦"
            />
        <Button
            android:id="@+id/washn_btn_text_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文本框"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/washn_btn_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试1"
            />
        <Button
            android:id="@+id/washn_btn_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试2"
            />
        <Button
            android:id="@+id/washn_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="撤销"
            />
        <Button
            android:id="@+id/washn_btn_uncancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反撤销"
            />
    </LinearLayout>

    <com.gracefulwind.learnarms.write.widget.SmartHandNoteView
        android:id="@+id/washn_shnv_hand_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>